.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  font-size: 35rpx;
  color: #333;
  font-family: Helvetica, Arial, "Helvetica Neue", "Droid Sans", "Microsoft YaHei", sans-serif;
}

.canvas {
  width: 100%;
  height: 200px;
}

.marginTop {
  margin-top: 30rpx;
}

.mbtopcon {
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mbleft {
  margin-right: 4rpx;
  margin-left: 4rpx;
  display: flex;
  justify-content: flex-end;
}

.mbright {
  display: flex;
  justify-content: flex-start;
  margin-left: 4rpx;
  margin-right: 4rpx;
}

.lefttxt {
  text-align: left;
  width: 15%;
}

.righttxt {
  text-align: right;
  width: 15%;
}

.mbitem {
  height: 60rpx;
  background-color: #48BC47;
}

.mbitemcon {
  flex-grow: 1;
  border-style: solid;
  border-width: 1rpx;
  border-color: #48BC47;
  padding-left: 2rpx;
  padding-right: 2rpx;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
}

.leftpertxtbg {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.rightpertxtbg {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.canvas{
  width: 400px;
  height: 400px;
}
.report {
  font-size: 60rpx;
}