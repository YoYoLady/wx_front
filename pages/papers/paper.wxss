/* pages/papers/paper.wxss */

.line {
  width: 100%;
  height: 1px;
  background-color: #d8d8d8;
}

.body {
  padding: 30rpx 30rpx;
  font-size: 50rpx;
}

.nums {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 20rpx;
}

.curnum {
  color: #1bd0bd;
  font-size: 80rpx;
  font-style: italic;
  margin-right: 10rpx;
}

.totalnum {
  font-size: 50rpx;
  margin-right: 10rpx;
}

.options {
  display: flex;
  padding: 30rpx 30rpx;
  align-items: center;
}

.optionchoose {
  border: 1px #1bd0bd solid;
  background-color: white;
  color: #1bd0bd;
  width: 40px;
  height: 40px;
  text-align: center;
  border-radius: 100px;
  justify-content: center;
  display: flex;
  align-items: center;
}

.optioncontent {
  color: #595757;
  font-size: 40rpx;
  float: left;
  margin-left: 20rpx;
  width: 80%;
}

.itemView {
  margin-top: 10px;
  margin-left: 20rpx;
  margin-right: 10px;
  height: 50px;
  justify-content: flex-start;
  display: flex;
  align-items: center;
}

.input {
  display: block;
  width: 90%;
  min-height: 50rpx;
  padding: 20rpx;
  border: 1px solid lightgray;
}

.editque {
  margin: 30rpx;
  padding: 20rpx;
}

.btnCon {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.button-sp-area {
  text-align: center;
  color: #48BC47;
  margin-left: 20rpx;
  border-radius: 15rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #48BC47;
  width: 28%;
}
