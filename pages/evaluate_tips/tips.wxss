/* pages/evaluate_tips/tips.wxss */


button::after{ 
	border: none; 
}

button {
    margin-top: 100px;
    width: 300px;
    border-radius: 30px;
    background: #78c8e8;
    color: white;
    padding: 0rpx 100rpx;
}

/*
  图片中潜入控件
*/
.image-parent {
  height: 700rpx; 
  position: relative;
  border: 2rpx solid hidden;
}

.image {
  width: 100%;
  position: absolute;
}

.child_text {
  width: 300px;
  height: 24px;  
  position: absolute;
  left: 50px;
  top: 20px;
  color: white;
  font-size: large;
  text-align: center;
  background:transparent;
}  


.tips_text {
  width: 80%;
  height: 300px;  
  position: absolute;
  left: 40px;
  top: 50px;
  color: blue;
  font-size: medium;
  text-align: left;
  background:white;
} 


