<!--first_page.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="weui-cells__title">请选择学校：</view>
    <view class="weui-cells weui-cells_after-title">
            <radio-group bindchange="radioChange">
                <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                    <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__hd weui-check__hd_in-checkbox">
                        <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
                        <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
                    </view>
                    <view class="weui-cell__bd">{{item.name}}</view>
                </label>
            </radio-group>
            <!-- <view class="weui-cell weui-cell_link">
                <view class="weui-cell__bd" bindtap='bindTagRadio'>添加学校</view>
                <modal id="modal" hidden="{{hiddenmodalput}}" title="添加学校" confirm-text="提交" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">  
                  <input type='text' placeholder="这里写学校名称" auto-focus/>
                </modal>
            </view> -->
    </view>

  <!-- 年级   -->
  <view class="weui-cells__title">请选择年级：</view> 
    <view class="weui-cells weui-cells_after-title">
            <radio-group bindchange="radioGradeChange">
                <label class="weui-cell weui-check__label" wx:for="{{radioGradeItems}}" wx:key="value">
                    <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__hd weui-check__hd_in-checkbox">
                        <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
                        <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
                    </view>
                    <view class="weui-cell__bd">{{item.name}}</view>
                </label>
            </radio-group>
    </view>

  <!-- 手机号   -->
  <view class="weui-cells__title">其他信息</view>
      <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                  <view class="weui-label">手机号：</view>
              </view>
              <view class="weui-cell__bd">
                    <input class="weui-input"  bindblur="getUserMobile" placeholder="输入手机号，可以接收报告"/>
              </view>
          </view>
      </view>

  <!--  开始测试   -->
  <view class="button-sp-area">
    <button class="weui-btn" type="primary" plain="false" bindtap="beginEvaluate">开始评测</button>
  </view>      
</view>